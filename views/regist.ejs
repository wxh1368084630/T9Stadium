<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" name="viewport" content="width=device-width,intial-scale=1,user-scalable=no">
    <title>注册</title>
    <link rel="short icon" href="public/images/lable.jpg">
    <script src="public/js/jquery-1.11.0.js" type="text/javascript" charset="UTF-8"></script>
    <script src="https://cdn.bootcdn.net/ajax/libs/blueimp-md5/2.16.0/js/md5.js"></script>
    <link rel="stylesheet" href="public/css/bootstrap.min.css">
    <style>
        .regist_div_first {
            text-align: center;
            margin-top: 50px;
        }
        .input-group{
            width: 80%;
            text-align: center;
            margin-top: 10px;
            margin-bottom: 10px;
            margin-left: 30px;
        }
        .input-group-addon{
            font-size: 20px;
        }
        .btn-success{
            width: 80%;
            font-size: 20px;
            margin-left: 30px;
        }
    </style>
</head>
<body>
<header>
    <%- include("commonhead.ejs")%>
</header>

<div class="regist_div_first">
    <img src="public/images/customer.png" class="img-circle">
</div>
<div class="">
    <div class="input-group">
        <span class="input-group-addon">账号</span>
        <input class="form-control" type="text" name="account" id="userId"><br>
    </div>

    <div class="input-group">
        <span class="input-group-addon">密码</span>
        <input class="form-control" type="password" name="password" id="passWord"><br>
    </div>

    <div class="">
        <input class="btn btn-success" type="button" value="注册" id="R_btn">
    </div>
</div>
<script type="text/javascript">
    $('#R_btn').click(function () {
        let content= md5($('#passWord').val());
        $.ajax({
            type:"post",
            url:"/register",
            data:{userId:$('#userId').val(),passWord:content},
            dataType:"json",
            async:true,
            success:function (data) {
                if (data.code == 200){
                    alert(data.msg);
                    location.href='/index';
                }else{
                    alert(data.msg);
                    location.href='/regist';
                }
            }
        })
    })
</script>
</body>
</html>